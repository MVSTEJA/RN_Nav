{
    "parser": "babel-eslint",
    "extends": [
        "airbnb",
        "prettier",
        "prettier/flowtype",
        "prettier/react"
    ],
    "plugins": [
        "react",
        "react-native",
        "prettier"
    ],
    "env": {
        "node": true,
        "es6": true
    },
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "strict": 0,
        "arrow-body-style": 1,
        "class-methods-use-this": 1,
        "default-case": 0,
        "generator-star-spacing": 0,
        "global-require": 0,
        "guard-for-in": 2,
        "new-cap": 0,
        "no-alert": 0,
        "no-confusing-arrow": 0,
        "no-constant-condition": 0,
        "no-console": "error",
        "no-plusplus": 0,
        "no-restricted-syntax": 2,
        "no-underscore-dangle": 2,
        "no-use-before-define": 2,
        "no-undef": 2,
        "no-trailing-spaces": [
            "error"
        ],
        "import/extensions": 0,
        "import/no-extraneous-dependencies": 0,
        "import/no-duplicates": 0,
        "import/no-unresolved": 0,
        "import/no-dynamic-require": 0,
        "import/prefer-default-export": 0,
        "react/jsx-no-bind": 1,
        "react/jsx-filename-extension": 0,
        "react/forbid-prop-types": 0,
        "react/prefer-stateless-function": 1,
        "react/require-default-props": 0,
        "react/sort-comp": 0,
        "react/no-unused-prop-types": 1,
        "react/prop-types": 1,
        "react/no-array-index-key": 1,
        //custom line-breaks
        "linebreak-style": "off",
        "prettier/prettier": [
            "error",
            {
                "singleQuote": true,
                "semi": true,
                "trailingComma": "es5"
            }
        ]
    }
}